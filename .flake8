# 复杂度阈值
max-complexity = 10

# 排除目录
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    env,
    .venv,
    migrations,
    *.egg-info,
    .eggs,
    .tox,
    .coverage,
    htmlcov,
    .env,
    .flaskenv

# 统计信息
statistics = True
count = True

# 输出格式
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# 显示源代码
show-source = True

# 显示统计信息
show-pep8 = False

# 聚合错误
aggregate = True

# 输出文件
output-file = flake8_report.txt 