[flake8]
max-line-length = 88
extend-ignore = E203,W503,E501,E722,F401,F403,F405,F841,W291,W292,W293,W391,W605,C901,C902,E731,E741,E742,E743,E744,E745,E746,E747,E748,E749,E750,E751,E752,E753,E754,E755,E756,E757,E758,E759,E760,E761,E762,E763,E764,E765,E766,E767,E768,E769,E770,E771,E772,E773,E774,E775,E776,E777,E778,E779,E780,E781,E782,E783,E784,E785,E786,E787,E788,E789,E790,E791,E792,E793,E794,E795,E796,E797,E798,E799

# 复杂度阈值
max-complexity = 10

# 排除目录
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    env,
    .venv,
    migrations,
    *.egg-info,
    .eggs,
    .tox,
    .coverage,
    htmlcov,
    .env,
    .flaskenv

# 统计信息
statistics = True
count = True

# 输出格式
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# 显示源代码
show-source = True

# 显示统计信息
show-pep8 = False

# 聚合错误
aggregate = True

# 输出文件
output-file = flake8_report.txt 