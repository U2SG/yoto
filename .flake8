    E764,  # ambiguous variable name in except clause
    E765,  # ambiguous variable name in except clause
    E766,  # ambiguous variable name in except clause
    E767,  # ambiguous variable name in except clause
    E768,  # ambiguous variable name in except clause
    E769,  # ambiguous variable name in except clause
    E770,  # ambiguous variable name in except clause
    E771,  # ambiguous variable name in except clause
    E772,  # ambiguous variable name in except clause
    E773,  # ambiguous variable name in except clause
