[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)
    E722,  # do not use bare except
    F401,  # imported but unused
    F403,  # wildcard import
    F405,  # name may be undefined, or defined from star imports
    F841,  # local variable is assigned to but never used
    W291,  # trailing whitespace
    W292,  # no newline at end of file
    W293,  # blank line contains whitespace
    W391,  # blank line at end of file
    W605,  # invalid escape sequence
    C901,  # function is too complex
    C902,  # class is too complex
    E731,  # do not assign a lambda expression, use a def
    E741,  # ambiguous variable name
    E742,  # ambiguous class name
    E743,  # ambiguous function name
    E744,  # ambiguous variable name in except clause
    E745,  # ambiguous variable name in except clause
    E746,  # ambiguous variable name in except clause
    E747,  # ambiguous variable name in except clause
    E748,  # ambiguous variable name in except clause
    E749,  # ambiguous variable name in except clause
    E750,  # ambiguous variable name in except clause
    E751,  # ambiguous variable name in except clause
